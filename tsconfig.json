    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "target": "es2017",
    "outDir": "dst",
    "module": "ESNext"
  },
  "include": ["src/**/*"]
}
